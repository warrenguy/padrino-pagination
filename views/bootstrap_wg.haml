%div
  %ul.pagination
    - if previous_page
      %li
        =link_to "Prev", url(controller, action, params.merge("page" => previous_page)), :class => :prev_next

    %li
      %span
        ="Page #{current_page} of #{total_pages}"


    - if next_page
      %li
        =link_to 'Next', url(controller, action, params.merge("page" => next_page)), :class => :prev_next
